    <div class="content-wrapper">

        <div class="row centered-text">
            <hr class="margin-bottom-40px">
            <%posts = @getLatestPosts()%>
            <%defImg = '/images/default-image.jpg'%>
            <div class="large-4 columns">
                <a class="bloglink" href="<%-posts[0].url%>">
                <figure>
                    <img src="<%-posts[0].img or defImg%>" />
                </figure>
                <h4><%-posts[0].title%></h4>
                <p><%-@truncateText(posts[0].contentRenderedWithoutLayouts)%></p>
                </a>
            </div>

            <div class="large-4 columns">
                <a class="bloglink" href="<%-posts[1].url%>">
                <figure>
                    <img src="<%-posts[1].img or defImg%>" />
